<div class="container">
  <div class="row card-show">
      <% if @bike.photo.attached? %>
        <%= cl_image_tag @bike.photo.key%>
      <% else %>
        <img src="<%= @bike.img_url %>">
      <% end %>
      <h2><%= @bike.name %></h2>
      <h3><%= @bike.category %> Bike</h3>
      <h3>Price: <%= @bike.price %>â‚¬ per day</h3>
      <h3><%= @bike.size %> Size</h3>
      <h4>Owner: <%= @bike.user.firstname %> <%=  @bike.user.lastname %></h4>
      <h4><%= link_to "Book this bike", new_bike_booking_path(@bike) %></h4>
      <h4><%= link_to "Edit", bikes_path %></h4>
      <% if policy(@bike).destroy? %>
      <h4><%= link_to "Delete", bikes_path %></h4>
      <% end %>
  </div>
</div>
