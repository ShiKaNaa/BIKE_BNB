      <% if @bike.photo.attached? %>
            <%= cl_image_tag @bike.photo.key, class: "card-img-top"%>
      <% else %>
        <img src="<%= @bike.img_url %>" class="card-img-top" width ="250px">
      <% end %>
      <h3>Category : <%= @bike.category %></h3>
      <h3>Price: <%= @bike.price %>â‚¬</h3>
      <% if policy(@bike).destroy? %>
      <h4><%= link_to "Delete", bikes_path %></h4>
      <% end %>

      <h4><%= link_to "Edit", bikes_path %></h4>
    </div>
  </div>
</div>

