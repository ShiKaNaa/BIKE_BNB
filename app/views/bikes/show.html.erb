<div class="container">
  <div class="card-show">
    <div>
      <% if @bike.photo.attached? %>
        <%= cl_image_tag @bike.photo.key%>
      <% else %>
        <img src="<%= @bike.img_url %>">
      <% end %>
    </div>
    <div class="d-flex flex-column">
      <div id="title">
        <h2><%= @bike.name %></h2>
      </div>
      <%# <div class="card-info"> %>
        <div class="text">
          <h3>Category: <%= @bike.category %> Bike</h3>
          <h3>Price: <%= @bike.price %>â‚¬ per day</h3>
          <h3>Size: <%= @bike.size %></h3>
          <h3>Owner: <%= @bike.user.firstname %> <%=  @bike.user.lastname %></h3>
        </div>
        <div class="links">
          <h4><%= link_to "Book", new_bike_booking_path(@bike) %></h4>
          <h4><%= link_to "Edit", bikes_path %></h4>
          <% if policy(@bike).destroy? %>
            <h4><%= link_to "Delete", bikes_path %></h4>
          <% end %>
        </div>
      <%# </div> %>
    </div>
  </div>
</div>
