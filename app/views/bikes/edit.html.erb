<div class="container">

<h1>Edit your bike</h1>
  <%= simple_form_for (@bike) do |f| %>
    <%= f.input :name %>
    <%= f.input :price, as: :numeric %>
    <%= f.input :size, collection: Bike::SIZE %>
    <%= f.input :category, collection: Bike::CATEGORY %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Change bike add", class: "card-link" %>
  <% end %>
</div>
