<div class="container">
  <div>
    <h1>Almost there! Please confirm the dates you wish to book:</h1>
  </div>

  <div>
    <%= simple_form_for [@bike, @booking] do |f| %>
    <%= f.input :comment %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.submit 'Send my booking request', class: "btm btm-success"%>
    <% end %>
  </div>

</div>

